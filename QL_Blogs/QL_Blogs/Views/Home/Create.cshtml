
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>New Blogs</h2>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-md-12">
            <form method="post" id="myForm" name="myForms" onsubmit="return validateform()">
                
                <div class="col-md-8">
                    <div class="form-group">
                        <label id="font">Tiêu đề</label>
                        <input type="text" name="id" class="form-control" id="myInputId" placeholder="Tiêu đề" />
                    </div>
                    <div class="form-group">
                        <label id="font">Mô tả</label>
                        <input type="text" name="id" class="form-control" id="myInputId" placeholder="Mô tả" />
                    </div>
                    <div class="form-group">
                        <label id="font">Chi tiết</label>
                        <textarea type="text" name="id" class="form-control" id="myInputId" style="height: 150px;"></textarea>
                    </div>
                    <div class="form-group">
                        <label id="font">Hình ảnh</label>
                        <input type="file" id="fileSelect">
                    </div>
                    <div class="form-group">
                        <label for="inputState">Loại</label>
                        <select id="inputState" class="form-control" style="width: 110px;">
                            <option selected>Choose...</option>
                            <option>Thời sự</option>
                            <option>Thế giới</option>
                            <option>Kinh doanh</option>
                            <option>Gỉai trí</option>
                            <option>Thể thao</option>
                            <option>Pháp luật</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Vị trí</label>
                        <div>
                            <input type="checkbox" id="vn" name="vn" value="Bike">
                            <label for="vehicle1"> Việt Nam</label><br>
                            <input type="checkbox" id="sa" name="sa" value="Car">
                            <label for="vehicle2"> Châu Á</label><br>
                            <input type="checkbox" id="ca" name="ca" value="Boat">
                            <label for="vehicle3"> Châu Âu</label><br>
                            <input type="checkbox" id="cm" name="cm" value="Boat">
                            <label for="vehicle3"> Châu Mỹ</label><br><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Public</label>
                        <div class="form-check">
                            <input type="radio" name="exampleRadios" id="exampleRadios1">
                            <label class="form-check-label">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                            <label>Date Public</label>
                            <input type="date" class="form-control" id="fileSelect" style="width: 150px;">
                    </div>
                    <div class="button">
                            <button class="btn btn-success">Search</button>
                            <button class="btn btn-primary">Clear</button>
                    </div>
</form>
        </div>
    </div>
</div>  
